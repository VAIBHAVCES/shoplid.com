<%- include('../partials/header')%>
<%- include('../partials/navbar')%>

<div class="row d-flex justify-content-center">

    <div class="col-lg-6 ">

        <form action="/products" method="POST" class="needs-validation" novalidate>

            <h1 class = "text-center">Register New Product</h1>
            <div class="mb-3">
        
                <label for="name" class="form-label">Name</label>
                <input type="text" id="name" class="form-control" name ="name" required>
            </div>
        
            <div class="mb-3">
                <label for="img" class="form-label">Image - URL</label>
                <input type="text" id="img" class="form-control" name ="img" required>
            </div>
            
            <div class="mb-3">
                <label for="price" class="form-label">Price in $ </label>
                <input type="number" id="price" class="form-control" name ="price" required >
            </div>
             
            <div class="mb-3">
                <label for="desc" class="form-label">Description</label>
                <textarea class="form-control" id="desc"  name = "desc"rows="5" placeholder="Description" required></textarea>
            </div>
        
            <div class="col-12">
                <button class="btn btn-primary" type="submit">Submit form</button>
              </div>
        </form>

    </div>


</div>




<%- include('../partials/footer')%>